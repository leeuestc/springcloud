<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.dao.PaymentMapper">
    <resultMap id="BaseResultMap" type="domain.Payment">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="data_sental" jdbcType="VARCHAR" property="dataSental" />
    </resultMap>
    <insert id="create" parameterType="domain.Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payment(data_sental) values (#{dataSental})
    </insert>
    <select id="getPaymentById" parameterType="Long" resultMap="BaseResultMap">
        select * from payment where id=#{id}
    </select>

</mapper>